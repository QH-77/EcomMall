<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/user_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp">


            <EditText
                android:id="@+id/et_user_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_shape_et_downline_bg"
                android:gravity="center_vertical"
                android:hint="请输入用户名"
                android:text="166123456"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="@color/gray_b1"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_user_login_new_clear"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/user_icon_edittext_clear">

                <requestFocus />
            </ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"

            >

            <LinearLayout
                android:id="@+id/ll_user_login_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_user_login_new_clear_password"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/user_icon_edittext_clear">

                        <requestFocus />
                    </ImageView>

                    <EditText
                        android:id="@+id/et_user_login_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/user_shape_et_downline_bg"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:text="123456"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_b1"
                        android:textSize="14dp"
                        android:visibility="visible" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_login_new_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:text="忘记密码"
                android:textColor="@color/gray_b1"
                android:textSize="12dp"
                android:visibility="gone" />

